<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="SampleApp.Views.PeripheralPage">
    <StackLayout>
        <Label Text="Peripheral Mode" FontSize="Large" />
        <Label Text="State" />
        <Label Text="{Binding State}" />
        <Label Text="Not Advertising">
            <Label.Triggers>
                <DataTrigger TargetType="Label" Binding="{Binding Advertising}" Value="True">
                    <Setter Property="Text" Value="Advertising" />
                </DataTrigger>
            </Label.Triggers>
        </Label>
      <Button Text="Start Advertising" Command="{Binding AdvertiseCommand}"></Button>
      <Button Text="Stop Advertising" Command="{Binding StopAdvertiseCommand}"></Button>
    </StackLayout>
</ContentPage>